<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:background="@drawable/gradient_"
    android:layout_height="match_parent"
    app:layout_anchorGravity="center"
    tools:context=".Peoples_Task">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:gravity="end">
        <TextView
            android:id="@+id/ButtonRequests"
            android:gravity="center"
            android:textColor="#3F51B5"
            android:background="@drawable/buttonbg"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/bold"
            android:textSize="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Requests" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:gravity="center"
            android:textColor="@color/mtrl_textinput_default_box_stroke_color"
            android:fontFamily="@font/bold"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's Find New tennis Friends to Play With.." />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/agebasedButton"
                android:gravity="center"
                android:textColor="#545CFF"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonbg"
                android:paddingVertical="20dp"
                android:paddingHorizontal="67dp"
                android:fontFamily="@font/bold"
                android:textSize="15dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age Based" />
            <TextView
                android:id="@+id/SkillbasedButton"
                android:gravity="center"
                android:textColor="#545CFF"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bold"
                android:background="@drawable/buttonbg"
                android:paddingVertical="20dp"
                android:paddingHorizontal="67dp"
                android:textSize="15dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill Based" />
            <TextView
                android:id="@+id/bothButton"
                android:gravity="center"
                android:textColor="#545CFF"
                android:fontFamily="@font/bold"
                android:background="@drawable/buttonbg"
                android:paddingVertical="20dp"
                android:paddingHorizontal="87dp"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both" />
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playersId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_empty"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/quantum_grey700"
            android:fontFamily="@font/r"
            android:text="No Requests to Show"/>
    </LinearLayout>
</FrameLayout>